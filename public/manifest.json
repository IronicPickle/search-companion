{
  "name": "Search Companion",
  "version": "1.0.0",
  "description": "Search Companion",
  "permissions": [ "storage", "webNavigation", "<all_urls>" ],
  "background": {
    "scripts": [ "background_main.js" ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_main.js", "content_cmsHandler.js",
      "react_embed.js"]
  }],
  "options_page": "options.html",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2
}